{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Next.js: debug chrome client-side",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:3000",
      "runtimeArgs": [
        "--incognito"
      ]
    },
    {
      "name": "Next.js: debug chrome ar camera",
      "type": "chrome",
      "request": "launch",
      "url": "https://192.168.31.172:3000/ar-camera"
    },
    {
      "name": "Next.js: debug firefox client-side",
      "type": "firefox",
      "request": "launch",
      "url": "https://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "firefoxArgs": [
        "-foreground",
        "-private-window"
      ]
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
  ]
}